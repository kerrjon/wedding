  </ul>
</section>

<div class="wavesDivider"></div>

<section id="rsvp" style="padding-bottom:46px;">
    <div class="rsvpForm">
      <h2 style="margin-top: 0">RSVP</h2>
      @using (Html.BeginForm("Index", "Home", FormMethod.Post))
      {

        @Html.LabelFor(m => m.IsAttending)
        @Html.DropDownListFor(x => x.IsAttending, new List<SelectListItem>
        {
          new SelectListItem { Text= "Select...", Value = "0", Selected = true},
          new SelectListItem { Text= "Yes", Value = "1" },
          new SelectListItem { Text= "No", Value = "2" }

        })
        @Html.ValidationMessageFor(m => m.IsAttending)

        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName)
        @Html.ValidationMessageFor(m => m.FirstName)

        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName)
        @Html.ValidationMessageFor(m => m.LastName)

        <div id="attendingOptions">

          @Html.LabelFor(m => m.AdultsAttending)
          @Html.DropDownListFor(x => x.AdultsAttending, new List<SelectListItem>
        {
          new SelectListItem { Text= "1", Value = "1" },
          new SelectListItem { Text= "2", Value = "2" },
          new SelectListItem { Text= "3", Value = "3" },
          new SelectListItem { Text= "4", Value = "4" }
        })

          @Html.LabelFor(m => m.ChildrenAttending)
          @Html.DropDownListFor(x => x.ChildrenAttending, new List<SelectListItem>
        {
          new SelectListItem { Text= "0", Value = "0" },
          new SelectListItem { Text= "1", Value = "1" },
          new SelectListItem { Text= "2", Value = "2" },
          new SelectListItem { Text= "3", Value = "3" },
          new SelectListItem { Text= "4", Value = "4" }
        })

          <div id="otherTravelers">
            @Html.LabelFor(m => m.OtherNames)
            @Html.TextAreaFor(m => m.OtherNames)
          </div>


          @Html.LabelFor(m => m.TravelDates)
          @Html.TextAreaFor(m => m.TravelDates)

        </div>
        <br />
        <button type="submit">Submit</button>
      }
      @Html.ValidationSummary()
    </div>
</section>

















