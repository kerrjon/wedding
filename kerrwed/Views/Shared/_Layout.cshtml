    <style type="text/css">
      .gradient {
         filter: none;
      }
    </style>
  <![endif]-->

  @Html.Partial("_GoogleAnalytics")
</head>
<body>
  <div class="sky">

      <div class="container">
        @RenderBody()

        @Html.Partial("_NavigationMenu")

